<p id="notice"><%= notice %></p>

<div class="padding-nav">
  <div class="container" style="margin-top:10px;">
    <div class="row form-group">
      <% @categories.each do |category| %>
        <h1 class="text-center"> <%= category.name %></h1> </br>
        <% category.shirts.each do |shirt| %>
          <div class="col-xs-12 col-md-4">
            <%= link_to (image_tag shirt.photo, class: 'panel-image-preview'), shirt_path(shirt) %>
            <div class="panel-footer text-center">
              <span class="text-center"> <i class="fa fa-money"></i> Price <%= number_to_currency shirt.price %> </span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>


