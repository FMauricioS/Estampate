<p id="notice"><%= notice %></p>

<div class="padding-nav">
  <div class="container" style="margin-top:10px;">
    <div class="row form-group">
      <% @shirts.each do |shirt| %>
        <div class="col-xs-12 col-md-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title text-center"><%= shirt.title %> </h3>
            </div>
            <div class="panel-image hide-panel-body">
              <%= link_to (image_tag shirt.photo, class: 'panel-image-preview'), shirt_path(shirt) %>
            </div>
            <div class="panel-body text-center">
              <p><%= shirt.description %> </p>
            </div>
            <div class="panel-footer text-center">
              <span>
                <i class="fa fa-money"></i> Price <%= number_to_currency shirt.price %>
              </span>
           </div>
            <%= link_to "Comprar", shirt_path(shirt), class: "btn btn-block btn-primary"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
