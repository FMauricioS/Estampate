<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="padding-nav"><%= t '.Listado de camisetas' %></h1>

  <table>
    <thead>
      <tr>
        <th>Size</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Description</th>
        <th>Photo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @shirts.each do |shirt| %>
        <tr>
          <td><%= shirt.size %></td>
          <td><%= shirt.price %></td>
          <td><%= shirt.quantity %></td>
          <td><%= shirt.description %></td>
          <td><%= image_tag shirt.photo, size: "250x100" %></td>
          <td><%= link_to 'Show', shirt %></td>
          <td><%= link_to 'Edit', edit_shirt_path(shirt) %></td>
          <td><%= link_to 'Destroy', shirt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Shirt', new_shirt_path %>
</div>